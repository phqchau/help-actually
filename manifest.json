{
  "manifest_version": 2,

  "name": "Help, Actually",
  "description": "This extension gives a rating for various charity sites",
  "version": "1.0",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
	"http://www.doctorswithoutborders.org/",
  "tabs"
  ], 

  "page_action": {
    "default_icon": "icon128.png",
	  "default_title": "Help, Actually",
    "default_popup": "popup.html"
  }

}
